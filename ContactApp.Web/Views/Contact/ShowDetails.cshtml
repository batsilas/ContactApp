@model ContactApp.Web.Models.ContactPhoneEditViewModel
@{
    ViewData["Title"] = "Contact Details";
}

<div class="jumbotron">
    <form method="post" enctype="multipart/form-data">
        <div class="row p-3 border">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 border-bottom">
                <h2 class="text-primary">Contact Details</h2>
            </div>

            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label class="font-weight-bold">First Name</label>
                    </div>
                    <div class="col-8">
                        <p>@Model.Contact.FirstName</p>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="font-weight-bold">Last Name</label>
                    </div>
                    <div class="col-8">
                        <p>@Model.Contact.LastName</p>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="font-weight-bold">Email</label>
                    </div>
                    <div class="col-8">
                        <p>@Model.Contact.Email</p>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label class="font-weight-bold">Address</label>
                    </div>
                    <div class="col-8">
                        <p>@Model.Contact.Address</p>
                    </div>
                </div>

                @foreach (var item in Model.PhoneNumbers)
                {
                    <div class="form-group row">
                        <div class="col-4">
                            <label class="font-weight-bold">Phone Number #@(Model.PhoneNumbers.FindIndex(p => p.PhoneNumberId == item.PhoneNumberId)+1)</label>
                        </div>
                        <div class="col-8">
                            <p>@item.Number</p>
                        </div>
                    </div>
                }
                    
            </div>
        </div>
    </form>

    <form method="get">
        <div class="row">
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
            <div class="col-4">
                <button class="btn btn-secondary" asp-controller="Contact"
                        asp-action="Edit" asp-route-id="@Model.Contact.ContactId">
                    Edit
                </button>
            </div>
        </div>
    </form>

</div>