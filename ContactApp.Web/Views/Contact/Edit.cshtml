@model ContactPhoneEditViewModel
@{
    ViewData["Title"] = "Edit Contact";
}
   
 <div class="jumbotron">
    <form method="post" enctype="multipart/form-data">
        <div class="row p-3 border">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 border-bottom">
                <h2 class="text-primary">Edit Contact</h2>
            </div>

            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Contact.FirstName">First Name</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Contact.FirstName" required />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Contact.LastName">Last Name</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Contact.LastName" required />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Contact.Email">Email</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="email" asp-for="Contact.Email" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Contact.Address">Address</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="Contact.Address" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8">
                        <input class="form-control" type="hidden" asp-for="Contact.ContactId" />
                    </div>
                </div>

                <div class="row" style="margin-bottom:4px">
                    <div class="col">
                        <button type="submit" name="btn" value="Done" onclick="return validateInput()" class="btn btn-primary form-control">
                            Done
                        </button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>

            </div>

        </div>
    </form>

    <form method="get" enctype="multipart/form-data">
        <div class="col-8">
            <button type="submit" name="btn" value="EditPhoneNumbers" asp-controller="Contact"
                    asp-action="EditPhoneNumbers" asp-route-id="@Model.Contact.ContactId"
                    onclick="return validateInput()" class="btn btn-info form-control">
                Edit Phone Numbers
            </button>
        </div>
    </form>

 </div>